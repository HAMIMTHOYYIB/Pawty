                    <script>
                        function renderChart() {
                            axios.get('/vendor/totalweekorders')
                            .then(function(response) {
                                var totalPrices = response.data.map(function(item) {
                                    return item.total;
                                });
                    
                                var options = {
                                    series: [{
                                        name: 'No Of Orders',
                                        data: totalPrices
                                    }],
                                    chart: {
                                        height: 315,
                                        type: 'bar',
                                        toolbar: {
                                            show: false,
                                        },
                                    },
                                    colors: ['var(--chart-color2)'],
                                    plotOptions: {
                                        bar: {
                                            dataLabels: {
                                                position: 'top', // top, center, bottom
                                            },
                                        }
                                    },
                                    dataLabels: {
                                        enabled: true,
                                        formatter: function (val) {
                                            return  val;
                                        },
                                        offsetY: -20,
                                        style: {
                                            fontSize: '12px',
                                            colors: ['var(--color-500)'],
                                        }
                                    },
                    
                                    xaxis: {
                                        categories: response.data.map(function(item) {
                                            return item._id;
                                        }),
                                        position: 'bottom',
                                        axisBorder: {
                                            show: false
                                        },
                                        axisTicks: {
                                            show: false
                                        },
                                        tooltip: {
                                            enabled: true,
                                        }
                                    },
                                    yaxis: {
                                        axisBorder: {
                                            show: false
                                        },
                                        axisTicks: {
                                            show: false,
                                        },
                                        labels: {
                                            show: false,
                                            formatter: function (val) {
                                                return val;
                                            }
                                        }
                                    }
                                };
                    
                                var chart = new ApexCharts(document.querySelector("#vendorsalebar"), options);
                                chart.render();
                            })
                            .catch(function(error) {
                                console.error(error);
                            });
                        }
                    
                        window.addEventListener('DOMContentLoaded', renderChart);
                    </script>

