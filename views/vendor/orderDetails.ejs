                                    <button id="cancelButton" style="border-radius:10px; width: fit-content; background-color:rgb(189, 4, 4); margin:10px auto;" class="text-light px-3 py-1 border-0 <%= (orderProduct[0].status === 'Cancelled' || orderProduct[0].status === 'Delivered') ? 'd-none' : '' %> " 
                                        data-order-id="<%= order._id %>"
                                        data-product-id="<%= orderProduct[0]._id %>">
                                        Cancel Order
                                    </button>
                                </div>
                            </div>
                            <script>
                                const cancelButton = document.querySelector('#cancelButton');
                                cancelButton.addEventListener('click', handleClick);

                                function handleClick(event) {
                                    const status = "Cancelled";
                                    const orderId = this.dataset.orderId;
                                    const productId = this.dataset.productId;
                                    const index = this.dataset.index;

                                    Swal.fire({
                                        title: `Are you sure you want to cancel this order?`,
                                        icon: 'question',
                                        showCancelButton: true,
                                        confirmButtonText: 'Yes',
                                        cancelButtonText: 'No',
                                        customClass: {
                                            confirmButton: 'btn btn-prim',
                                            cancelButton: 'btn btn-secc'
                                        }
                                    }).then((result) => {
                                        if (result.isConfirmed) {
                                            updateOrderStatus(event, orderId, productId, status);
                                        }
                                    });
                                }
                                function updateOrderStatus(event, orderId, productId, status) {
                                    event.preventDefault();
                                    axios.post(`/vendor/orderStatus/${orderId}/${productId}`, { status })
                                        .then(response => {
                                            // Handle success response
                                            console.log(response.data);
                                            // Remove the cancel button
                                            const cancelButton = document.querySelector('#cancelButton');
                                            cancelButton.parentNode.removeChild(cancelButton);
                                            // Show a toast message
                                            toastr.success('Your order has been cancelled.');
                                        })
                                        .catch(error => {
                                            // Handle error response
                                            console.error(error);
                                            toastr.error('Failed to cancel the order.');
                                        });
                                }
                            </script>
                            <div class="card">
                                <h4 class="fw-bold m-3">Status History</h4>
                                <div class="card-body"> 
                                    <div class="d-flex col-12 row">
                                        <div class="col-lg-12">
                                            <% const options = { hour: 'numeric', minute: '2-digit', month: 'long', day: 'numeric' }; %>

                                            <ul class="list-group">
                                                <% const filteredStatuses = orderProduct[0].statusHistory.filter(status => status.vendorChanged); %>
                                              
                                                <% if (filteredStatuses.length > 0) { %>
                                                  <% const sortedStatuses = filteredStatuses.sort((statusA, statusB) => {
                                                    const order = ['Pending', 'Shipped', 'Out Of Delivery', 'Delivered', 'Requested for Cancellation', 'Cancelled'];
                                                    return order.indexOf(statusA.status) - order.indexOf(statusB.status);
                                                  }); %>
                                              
                                                  <% sortedStatuses.forEach(status => { %>
                                                    <li class="col-lg-12 list-group-item d-flex justify-content-between align-items-center">
                                                      <% if (status.status === 'Pending') { %>
                                                        <span class="status col fw-bold text-primary">Order Placed</span>
                                                      <% } else if (status.status === 'Shipped') { %>
                                                        <span class="status col fw-bold text-warning">Order Confirmed</span>
                                                      <% } else if (status.status === 'Out Of Delivery') { %>
                                                        <span class="status col fw-bold text-muted">Out for Delivery</span>
                                                      <% } else if (status.status === 'Delivered') { %>
                                                        <span class="status col fw-bold text-success">Delivered</span>
                                                      <% } else if (status.status === 'Requested for Cancellation') { %>
                                                        <span class="status col fw-bold" style="color: chocolate;">Requested for Cancellation</span>
                                                      <% } else if (status.status === 'Cancelled') { %>
                                                        <span class="status col fw-bold text-danger">Cancelled</span>
                                                      <% } %>
                                                      <span class="timestamp col  fw-bold"><%= new Date(status.timestamp).toLocaleString('en-US', options) %></span>
                                                      <% if (status.status === 'Pending') { %>
                                                        <span class="additional-info col fw-bold">OrderId :#<%= order._id %></span>
                                                      <% }else if (status.status === 'Shipped') { %>
                                                        <span class="additional-info col fw-bold">Payment Method:<%= order.paymentMethod %></span>
                                                      <% } else if (status.status === 'Out Of Delivery') { %>
                                                        <span class="additional-info col fw-bold">VendorId:#<%= orderProduct[0].vendorId %></span>
                                                      <% } else if (status.status === 'Delivered') { %>
                                                        <span class="additional-info col fw-bold">Recipient Id : <%= order.userId %></span>
                                                      <% } else if ((status.status === 'Requested for Cancellation') || (status.status === 'Cancelled')) { %>
                                                        <span class="additional-info col fw-bold">Recipient: John Doe</span>
                                                      <% } %>
                                                    </li>
                                                  <% }); %>
                                                <% } %>
                                              </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div> <!-- Row end  -->
